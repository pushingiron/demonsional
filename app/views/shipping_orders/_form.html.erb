<div class="container-fluid">
  <%= bootstrap_form_for( @shipping_order) do |f| %>
    <% if shipping_order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(shipping_order.errors.count, "error") %> prohibited this shipping_order from being saved:</h2>
        <ul>
          <% shipping_order.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col">
        <%= f.select :payment_method, ['Prepaid', 'Collect', 'Third Party'] %>
      </div>
      <div class="col">
        <%= f.text_field :cust_acct_num %>
      </div>
    </div>
    <h2>References</h2>
      <%= f.fields_for :references do |fr| %>
      <div class="row">
        <div class="col">
          <%= fr.check_box :_destroy %>
        </div>
        <div class="col">
          <%= fr.text_field :reference_type %>
        </div>
        <div class="col">
          <%= fr.text_field :reference_value %>
        </div>
      </div>
      <% end %>
      <%= f.submit 'Add reference', :name => "add_reference" %>
      <%= f.submit 'Delete checked references', :name => "remove_reference" %>
    <h2>Pickup Location</h2>
    <%= f.fields_for :pickup_locations do |fp| %>
      <%= fp.hidden_field :stop_type, :value => 'Pickup' %>
      <div class="row">
        <div class="col">
          <%= fp.text_field :loc_code %>
        </div>
        <div class="col">
          <%= fp.text_field :loc_type %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= fp.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= fp.text_field :address1 %>
        </div>
        <div class="col">
          <%= fp.text_field :address2 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= fp.text_field :city %>
        </div>
        <div class="col">
          <%= fp.text_field :state %>
        </div>
        <div class="col">
          <%= fp.text_field :postal %>
        </div>
        <div class="col">
          <%= fp.text_field :country %>
        </div>
        <div class="col">
          <%= fp.text_field :geo %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= fp.text_field :residential %>
        </div>
        <div class="col">
          <%= fp.text_field :comments %>
        </div>
        <div class="col">
          <%= fp.time_field :earliest_appt %>
        </div>
        <div class="col">
          <%= fp.time_field :latest_appt %>
        </div>
      </div>
    <% end %>
    <%= f.submit 'Add pickup location', :name => "add_pickup_location" %>
    <%= f.submit 'Delete checked pickup locations', :name => "remove_pickup_location" %>
    <div>
      <h2>Drop Location</h2>
      <%= f.fields_for :drop_locations do |fd| %>
        <div class="row">
          <div class="col">
            <%= fd.text_field :loc_code %>
          </div>
          <div class="col">
            <%= fd.text_field :loc_type %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= fd.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= fd.text_field :address1 %>
          </div>
          <div class="col">
            <%= fd.text_field :address2 %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= fd.text_field :city %>
          </div>
          <div class="col">
            <%= fd.text_field :state %>
          </div>
          <div class="col">
            <%= fd.text_field :postal %>
          </div>
          <div class="col">
            <%= fd.text_field :country %>
          </div>
          <div class="col">
            <%= fd.text_field :geo %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= fd.text_field :residential %>
          </div>
          <div class="col">
            <%= fd.text_field :comments %>
          </div>
          <div class="col">
            <%= fd.time_field :earliest_appt %>
          </div>
          <div class="col">
            <%= fd.time_field :latest_appt %>
          </div>
        </div>
      <% end %>
      <%= f.submit 'Add drop location', :name => "add_drop_location" %>
      <%= f.submit 'Delete checked drop locations', :name => "remove_drp[_location" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>