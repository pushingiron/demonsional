<p id="notice"><%= notice %></p>
<%= link_to 'Load Rates', load_rates_rates_path %>
<br>
<%= link_to 'New Rate', new_rate_path %>
<br>
<%= link_to 'Delete All', destroy_all_rates_path %>
<br><br>
<div class="container-fluid">
<h1>Rates</h1>

<table>
  <thead class="table">
    <tr>
      <th>Contract</th>
      <th>From loccode</th>
      <th>From city</th>
      <th>From state</th>
      <th>From zip</th>
      <th>From country</th>
      <th>To loccode</th>
      <th>To city</th>
      <th>To state</th>
      <th>To zip</th>
      <th>To country</th>
      <th>Scac</th>
      <th>Mode</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.contract_id %></td>
        <td><%= rate.from_loccode %></td>
        <td><%= rate.from_city %></td>
        <td><%= rate.from_state %></td>
        <td><%= rate.from_zip %></td>
        <td><%= rate.from_country %></td>
        <td><%= rate.to_loccode %></td>
        <td><%= rate.to_city %></td>
        <td><%= rate.to_state %></td>
        <td><%= rate.to_zip %></td>
        <td><%= rate.to_country %></td>
        <td><%= rate.scac %></td>
        <td><%= rate.mode %></td>
        <td><%= rate.rate %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>