<div class="col">
<%= f.fields_for :references do |fr| %>
<div class="row">
  <div class="col">
    <%= fr.check_box :_destroy, hide_label: true %>
  </div>
  <div class="col">
    <%= fr.text_field :reference_type, hide_label: true %>
  </div>
  <div class="col">
    <%= fr.text_field :reference_value, hide_label: true %>
  </div>
</div>
<% end %>
<%= f.submit 'Add reference', :name => "add_reference" %>
<%= f.submit 'Delete checked references', :name => "remove_reference" %>
</div>